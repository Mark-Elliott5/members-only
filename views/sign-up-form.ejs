<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Register for Members Only</title>
  </head>
  <body class="bg-slate-800 text-white flex flex-col justify-center h-screen items-center">
    <h1>Register for Members Only</h1>
    <form class="text-center" action="" method="POST">
      <div class="flex justify-between gap-2 my-2">
        <!-- <label for="username">Username</label> -->
        <input class="text-black px-1" name="username" placeholder="Username" type="text" />
      </div>
      <div class="flex justify-between gap-2 my-2">
        <!-- <label for="password">Password</label> -->
        <input class="text-black px-1" name="password" placeholder="Password" type="password" />
      </div>
      <button class="self-center">Sign Up</button>
    </form>
    <% if (errors) { %>
      <% errors.forEach(function(error) { %>
        <p class="bg-red-500 rounded-xl px-2.5 py-1 my-2"><%= error %></p>
      <% }); %>
    <% } %>
  </body>
</html>
